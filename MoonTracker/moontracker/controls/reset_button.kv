#:import ResetButton moontracker.controls.reset_button.ResetButton
#:include moontracker/colors.kv

<-ResetButton>:

    canvas.before:
        Color:
            rgb: black
        Rectangle:
            pos: root.pos
            size: root.size

    Image:
        id: image
        pos: root.center_x - (dp(root.image_size) / 2), root.center_y - (dp(root.image_size) / 2)
        size: dp(root.image_size), dp(root.image_size)
        source: root.image
        keep_ratio: True
        allow_stretch: True

    Label:
        id: label
        halign: 'center'
        pos: root.center_x - (self.width/2), root.center_y - (dp(root.image_size) / 2) - self.height - dp(root.label_spacing)
        size: self.texture_size
        text: root.text
